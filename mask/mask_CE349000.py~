import ss_readfits
import numpy as np
from scipy.interpolate import splrep, splev
import os

g_data, g_tags = ss_readfits.ss_readfits("/arrays/igloo1/ssp201701/fits/Jan_combine9000.fits")
interwlen = wlen = np.genfromtxt('/asiaa/home/ssp201701/CAGB/CE34/4001_spec.txt', usecols=0)


for root, dirs, files in os.walk('/asiaa/home/ssp201701/CAGB/CE34'):
    filename = files





iii = 0
while iii < len(filename):
    fff = open('/arrays/igloo1/ssp201701/CAGB/CE34/' + filename[iii], 'a')
    
    wlen = np.genfromtxt('/asiaa/home/ssp201701/CAGB/CE34/' + filename[iii], usecols=0)
    flux = np.genfromtxt('/asiaa/home/ssp201701/CAGB/CE34/' + filename[iii], usecols=1)
    v = np.genfromtxt('/asiaa/home/ssp201701/CAGB/CE34/' + filename[iii], usecols=2)
    
    if wlen[0] > 7:
        clip1 = 0
    if wlen[-1] < 8:
        clip2 = len(wlen) - 1
    
    for l in range(len(wlen)):
        if wlen[l-1] < 7 and wlen[l] >= 7:
            clip1 = l
        elif wlen[l-1] <= 8 and wlen[l] > 8:
            clip2 = l
        elif wlen[l] > 20:
            clip3 = l
            break
    
    wlen1 = wlen[:clip1]
    wlen2 = wlen[clip2:clip3]
    wlen = np.concatenate((wlen1, wlen2))
    flux1 = flux[:clip1]
    flux2 = flux[clip2:clip3]
    flux = np.concatenate((flux1, flux2))
    v1 = v[:clip1]
    v2 = v[clip2:clip3]
    v = np.concatenate((v1, v2))

    # loop through all dust model 
    for i in range(len(g_data['GRAMS'])):
        gramflux = g_data['Fspec'][i]
        spl = splrep(interwlen, gramflux, k = 3)
        ngflux = splev(wlen, spl)
        
        r_lst = ((ngflux - flux)/v) ** 2
        r = r_lst.mean()
        
        fff.write(str(g_data['GRAMS'][i]) + '\t')
        fff.write(str(g_data['C2H2'][i]) + '\t')
        fff.write(str(r) + '\n')
        #break ###
        print i
    fff.close()      
    print ('END')
    #break ###
    iii += 1


print ('REAL END')

